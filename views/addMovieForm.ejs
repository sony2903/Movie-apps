<%- include('partials/header') %>

<form action="/movies/addMovieForm" method="post">
    <div class="form-group">
        <label for="exampleInputEmail1">Name</label>
        <input type="text" class="form-control" name="name" placeholder="Movie Title">
      </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Release Year</label>
        <input type="number" class="form-control" name="released_year" placeholder="Release Date">
      </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Genre</label>
        <select class="form-control" name="genre">
            <option value="" selected disabled>-- Please select --</option>
            <option>Animation</option>
            <option>Comedy</option>
            <option>Drama</option>
            <option>Horror</option>
            <option>Religious</option>
            <option>Thriller</option>
          </select>
      </div>

      <button type="submit" class="btn btn-primary">Submit</button>
</form>   

<%- include('partials/footer') %>